<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vincent.mapper.UserMapper">
<!--    <select id="selectAll" resultType="com.vincent.domain.User">-->
    <select id="selectAll" resultType="User">
        select * from user;
    </select>
<!--    <select id="selectById" resultType="com.vincent.domain.User">-->
    <select id="selectById" resultType="User">
        select * from user where id = #{id};
    </select>
    <!-- 通过转译符来实现范围查询  或者CDATA-->
    <select id="selectByIdCondition" resultType="User">
      <!--  select * from user where id &lt; #{id}; -->
        select *
        from user where id <![CDATA[
            <#{id}
        ]]>
    </select>
</mapper>